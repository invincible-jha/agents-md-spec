{
  "name": "agents-md",
  "version": "0.1.0",
  "description": "Parser and validator for AGENTS.md â€” a machine-readable file for websites to declare AI agent interaction policies.",
  "keywords": [
    "agents",
    "ai",
    "ai-agents",
    "agents-md",
    "policy",
    "robots-txt",
    "llm",
    "autonomous-agents"
  ],
  "homepage": "https://github.com/aumos-ai/agents-md-spec",
  "repository": {
    "type": "git",
    "url": "https://github.com/aumos-ai/agents-md-spec.git",
    "directory": "parsers/typescript"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE-CODE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
